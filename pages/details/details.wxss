/* 容器 */
.details-container {
  width: 100vw;
}
/* 背景 */
.bg {
  width: 100vw;
  height: 100vh;
  background: url(http://i2.hdslb.com/bfs/archive/9d35e8807b334374ecd8ee6a6c675e16e093349c.jpg) no-repeat center 50%;
  position: fixed;
  z-index: -2;
}

/* 降低图片亮度 */
.bg::after {
  content: '';
  display: block;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.2);
  position: fixed;
  z-index: -1;
}

/* 数据列表样式 */
.dataList {
  padding-top: 20rpx;
  font-size: 35rpx;
  margin-bottom: 30rpx;
}


.data-item {
  width: 90vw;
  margin-top: 20rpx;
}

.data-item .item-title {
  background-color: rgba(219,228,236,1);
  width: 100%;
  height: 80rpx;
  text-indent: 30rpx;
  font-weight: 700;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.item-content {
  background-color:rgba(255,255,255,.9);
  width: 100%;
  text-indent: 30rpx;
  padding-bottom:20rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.item-content view {
  width: 50%;
  padding-top: 20rpx;
  color: #c51140;
}

/* 没有数据 */
.NoThing {
  font-weight: 700;
  color:#eef113de;
  font-size: 40rpx;
}